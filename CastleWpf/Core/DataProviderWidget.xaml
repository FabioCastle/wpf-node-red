<UserControl x:Class="CastleWpf.Core.DataProviderWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CastleWpf.Core"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=local:DataProvider, IsDesignTimeCreatable=True}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Margin="10" FontSize="18" FontWeight="SemiBold" d:Text="Provider name" Text="{Binding ProviderName, RelativeSource={RelativeSource AncestorType={x:Type local:DataProviderWidget}}}"/>

        <Grid Margin="10" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" FontSize="16" Margin="5" Text="Valore intero"/>
            <TextBlock Grid.Row="0" Grid.Column="1" FontSize="16" Margin="5" HorizontalAlignment="Center" Text="{Binding IntValue, RelativeSource={RelativeSource AncestorType={x:Type local:DataProviderWidget}}}"/>
            <Button Grid.Row="0" Grid.Column="2" Margin="5" Background="Transparent" Click="RefreshIntValue">
                Rigenera
            </Button>

            <TextBlock Grid.Row="1" Grid.Column="0" FontSize="16" Margin="5" Text="Valore stringa"/>
            <TextBlock Grid.Row="1" Grid.Column="1" FontSize="16" Margin="5" HorizontalAlignment="Center" Text="{Binding StringValue, RelativeSource={RelativeSource AncestorType={x:Type local:DataProviderWidget}}}"/>
            <Button Grid.Row="1" Grid.Column="2" Margin="5" Background="Transparent" Click="RefreshStringValue">
                Rigenera
            </Button>
        </Grid>
    </Grid>
</UserControl>
