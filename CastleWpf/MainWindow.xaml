<Window x:Class="CastleWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CastleWpf"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="Castle App" Height="720" Width="1080">
    <Grid>
        <wv2:WebView2 x:Name="NodeRedWebView" d:Visibility="Collapsed"/>

        <StackPanel x:Name="LoadingPanel" VerticalAlignment="Center" HorizontalAlignment="Stretch">
            <TextBlock Text="Caricamento..." FontSize="18" HorizontalAlignment="Center"/>
            <ProgressBar IsIndeterminate="True" Margin="60,10"/>
        </StackPanel>
    </Grid>
</Window>
